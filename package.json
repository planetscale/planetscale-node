{
  "name": "planetscale-node",
  "version": "0.1.0",
  "description": "PlanetScale Database Client",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "lint": "eslint src/**",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/planetscale/planetscale-node.git"
  },
  "author": "Nick Van Wiggeren",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/planetscale/planetscale-node/issues"
  },
  "homepage": "https://github.com/planetscale/planetscale-node#readme",
  "dependencies": {
    "mysql2": "^2.2.5",
    "node-forge": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^15.12.2",
    "@types/node-forge": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "prefer-const": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true
  }
}
