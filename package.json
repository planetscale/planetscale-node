{
  "name": "planetscale-node",
  "version": "0.2.0",
  "description": "PlanetScale Database Client",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "format": "prettier src/**",
    "format:fix": "prettier src/** --write",
    "lint": "eslint src/**",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "npm run clean && npm run lint",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/planetscale/planetscale-node.git"
  },
  "author": "Nick Van Wiggeren",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/planetscale/planetscale-node/issues"
  },
  "homepage": "https://github.com/planetscale/planetscale-node#readme",
  "dependencies": {
    "@peculiar/webcrypto": "^1.2.0",
    "@peculiar/x509": "^1.5.2",
    "axios": "^0.24.0",
    "jest": "^27.3.1",
    "mysql2": "^2.2.5",
    "nanoid": "^3.1.30"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "prettier": "2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.2"
  }
}
